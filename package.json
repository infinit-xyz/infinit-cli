{
  "name": "@infinit-xyz/cli",
  "version": "0.0.0-alpha.9",
  "homepage": "https://infinit.tech",
  "repository": {
    "type": "git",
    "url": "https://github.com/infinit-xyz/infinit-cli.git"
  },
  "bugs": {
    "url": "https://github.com/infinit-xyz/infinit-cli/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "module": "src/index.ts",
  "bin": {
    "infinit": "bin/cli.js"
  },
  "files": [
    "/bin",
    "/dist",
    ".bun.lockb"
  ],
  "scripts": {
    "dev": "bun scripts/dev.ts",
    "build": "bun run clean:bin && bun run build:script",
    "build:script": "bun scripts/build.ts",
    "clean:bin": "find bin ! -name 'cli.js' -type f -exec rm -f {} +",
    "clean": "bun run clean:bin && rm -rf node_modules dist",
    "test": "bun run build && vitest run",
    "test:watch": "bun run build && vitest",
    "test:coverage": "bun run build && vitest run --coverage",
    "changeset:version": "changeset version && bun install --lockfile-only",
    "changeset:publish": "bun run build && changeset publish",
    "lint": "bunx @biomejs/biome lint --write ./src",
    "lint:check": "bunx @biomejs/biome lint ./src",
    "format": "bunx @biomejs/biome format --write ./src",
    "typecheck": "tsc --noEmit",
    "json2ts": "json2ts -i src/schemas/**/*.json -o src/schemas/generated.d.ts && bun run format"
  },
  "dependencies": {
    "@ethereumjs/wallet": "2.0.4",
    "@infinit-xyz/aave-v3": "0.0.0-alpha.10",
    "@infinit-xyz/core": "0.0.0-alpha.7",
    "@infinit-xyz/token": "0.0.0-alpha.9",
    "@infinit-xyz/uniswap-v3": "0.0.0-alpha.10",
    "@inquirer/prompts": "^6.0.1",
    "axios": "^1.7.7",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.0",
    "json-schema-to-typescript": "^15.0.0",
    "lodash": "^4.17.21",
    "ora": "^8.0.1",
    "prool": "^0.0.16",
    "ts-functional-pipe": "^3.1.2",
    "ts-pattern": "^5.3.1",
    "tsx": "^4.16.2",
    "viem": "2.21.16",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.1",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@types/bun": "latest",
    "@types/cli-progress": "^3.11.6",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.6",
    "@vitest/coverage-v8": "^2.1.1",
    "execa": "^9.3.0",
    "strip-ansi": "^7.1.0",
    "typescript": "^5.0.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1"
  }
}
